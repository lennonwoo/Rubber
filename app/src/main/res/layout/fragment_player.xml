<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/small_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_up_panel_bottom_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/song_art_small"
            android:layout_width="@dimen/sliding_up_panel_bottom_height"
            android:layout_height="@dimen/sliding_up_panel_bottom_height"/>

        <TextView
            android:id="@+id/song_info_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="20dp"
            android:singleLine="true"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/start_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:src="@drawable/ic_start_arrow_white_36dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/merge_player_large"/>
    </LinearLayout>

</LinearLayout>
